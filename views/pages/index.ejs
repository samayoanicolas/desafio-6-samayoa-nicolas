<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body>
    <%- include('../partials/navbar'); %>
    
    <h1 class="display-3"><%=title %></h1>
    <div class="btn-redireccion">
      <a class="btn btn-primary" href='/form'role="button">Cargar nuevo producto</a>
    </div>
        <div class="container" id="mi_tabla">
          <table class="table table-hover table-dark tableFixHead" >
            <thead>
              <tr class="head-table">
                <th scope="col">#</th>
                <th scope="col">Producto</th>
                <th scope="col">Precio</th>
                <th scope="col">Imagen</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <% products.forEach((item)=>{ %>
                  <tr class="head-table">
                    <th> <%=item.id%></th>
                    <td> <%=item.title%> </td>
                    <td> $ <%=item.price%></td>
                    <td><img class="product-img" src="<%=item.thumbnail %>"/></td>
                  </tr>
                <% }) %>
              </tr>
            </tbody>
          </table>
        </div>
    <%- include('../partials/footer'); %> 
  </body>
</html>